<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background">

    <!-- Título del ambiente -->
    <TextView
        android:id="@+id/tvRoomName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del Ambiente"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Tipo de ambiente -->
    <TextView
        android:id="@+id/tvRoomType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo: Salón"
        android:textSize="16sp"
        android:textColor="#757575"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Imagen del ambiente -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:radius="12dp">

        <ImageView
            android:id="@+id/ivRoomImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="Imagen del ambiente"
            android:background="#F0F0F0" />

    </androidx.cardview.widget.CardView>

    <!-- Descripción -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#424242"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvRoomDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción del ambiente"
        android:textSize="14sp"
        android:textColor="#616161"
        android:layout_marginBottom="16dp"
        android:lineSpacingExtra="4dp" />

    <!-- Información adicional -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Área:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#424242" />

        <TextView
            android:id="@+id/tvRoomArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="100 m²"
            android:textSize="14sp"
            android:textColor="#616161" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Capacidad:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#424242" />

        <TextView
            android:id="@+id/tvRoomCapacity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="50 personas"
            android:textSize="14sp"
            android:textColor="#616161" />

    </LinearLayout>

    <!-- Características -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Características"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#424242"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFeatures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:nestedScrollingEnabled="false" />

    <!-- Botón cerrar -->
    <Button
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:padding="12dp"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>

</ScrollView>